<html>
    <head>
        <link rel="stylesheet" href="styles.css">
        <title>Message Board</title>
    </head>
    <body>
        <header>
            <%-include("navbar", {links: links}) %>
        </header>
        <h1><%= messages.title %></h1>
        <section>
            <% messages.forEach((message) => { %>
                <div>
                    <h3><%= message.name %></h3>
                    <span><%= message.date %></span>
                </div>
                <div class="message">
                    <p>
                        <span>> </span>
                        <%= message.message %>
                    </p>
                </div>
                <%}); %>
        </section>
    </body>
</html>